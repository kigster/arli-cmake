#!/usr/bin/env bash
set +e
source bin/lib/loader
set -e

function install::libs() {
  cd src
  [[ -f Arlifile ]] && arli bundle
  cd -
}

function build::cmake(){
  cd src
  rm -rf build
  mkdir -p build
  cd build
  cmake ..
  make
}

function build() {
  install::libs
  build::cmake
}

build

set +e
